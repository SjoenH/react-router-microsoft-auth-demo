# Session Configuration
SESSION_SECRET=your-secret-key-at-least-32-characters-long

# Solution 1: OAuth2 Authorization Code Flow
# Register your app at https://portal.azure.com/#view/Microsoft_AAD_RegisteredApps/ApplicationsListBlade
OAUTH2_CLIENT_ID=your-client-id
OAUTH2_CLIENT_SECRET=your-client-secret
OAUTH2_TENANT_ID=your-tenant-id-or-common
OAUTH2_REDIRECT_URI=http://localhost:5173/auth/callback

# Solution 2: Azure AD B2C
# Create a B2C tenant at https://portal.azure.com
B2C_CLIENT_ID=your-b2c-client-id
B2C_CLIENT_SECRET=your-b2c-client-secret
B2C_TENANT_NAME=your-b2c-tenant-name
B2C_POLICY_NAME=B2C_1_signupsignin1
B2C_REDIRECT_URI=http://localhost:5173/auth/b2c-callback

# Solution 3: Entra ID with PKCE
# Register your app with "Public client/native" settings at https://portal.azure.com
ENTRA_CLIENT_ID=your-entra-client-id
ENTRA_TENANT_ID=your-entra-tenant-id
ENTRA_REDIRECT_URI=http://localhost:5173/auth/entra-callback

# Base URL for your application
BASE_URL=http://localhost:5173

# Node environment
NODE_ENV=development
